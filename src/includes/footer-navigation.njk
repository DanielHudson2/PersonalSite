<nav class="footer-navigation">
    <ul class="footer-navigation__list">
        {% for item in siteNavigation %}
            {% if item.link == page.url %}
                {% set current = 'aria-current="page"' %}
            {% else %}
                {% set current = '' %}
            {% endif %}

            <li class="footer-navigation__item">
                <a
                    class="footer-navigation__link"
                    href="{{ item.link }}"
                    {{ current | safe }}
                >
                    {{ item.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
