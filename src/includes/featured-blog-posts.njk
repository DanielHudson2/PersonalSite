<div class="featured-blog-posts">
    <h2 class="featured-blog-posts__title">Latest From <span data-color="brand" data-style="italic">My Blog</span></h2>
    <ul class="featured-blog-posts__list">
        {% set homeblogposts = collections.post | sortByDate | limit(5) %}

        {% for post in homeblogposts %}
            <li class="blog-post-card">
                <h3 class="blog-post-card__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>

                <time datetime="{{ post.data.date }}">{{ post.data.postDate }}</time>

                <p class="blog-post-card__description">{{ post.data.shortDescription }}</p>

                <div>
                    <a class="button" data-variation="underline" title="{{ post.title }}" href="{{ post.url }}">Read Post</a>
                </div>
            </li>
        {% endfor %}
    </ul>

    <p>
        <a
            class="button"
            href="/blog/"
        >
            View all posts
        </a>
    </p>
</div>
